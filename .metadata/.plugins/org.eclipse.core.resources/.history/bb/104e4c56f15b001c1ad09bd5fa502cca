package examne1ev;

import java.util.Scanner;

public class Ejer4e {

	public static void main(String[] args) {
	

		Scanner teclado = new Scanner(System.in);
		int n,m,cont=-1;
		String correo,pl,dom,letra,corre=("QWERTYUIOPASDFGHJKLÑZCXVBNM.-");
		boolean correcto = false;
		while(correcto == false) {
		System.out.println("Introduce una de direccion de correo válida");
		correo = teclado.next();
		correo = correo.toUpperCase();
		pl = correo.substring(0,correo.indexOf("@")-1);
		dom = correo.substring(correo.indexOf("@")+1,correo.length());
		if(correo.indexOf("@")<=64) {
		if(correo.length()<=254) {
		m= pl.length();
		letra=("");
		correcto = true;
		for(n=0;n<m && correcto == true;++n) {
			if(pl.indexOf(pl.charAt(n))>=0)correcto=true;
			if(pl.charAt(n)=='.') {
			correcto = true;
			if(letra.equals("."))correcto = false;
			if(n==0)correcto = false;
			}
			if(pl.charAt(n)=='_' )correcto = true;
			letra=("");
			letra+=pl.charAt(n);	
		}
		if(correcto==true) {
		m= dom.length();
		for(n=0;n<m && correcto == true;++n) {
			if(dom.indexOf(dom.charAt(n))>=0)correcto=true;
			else correcto = false;
			if(dom.charAt(n)=='.') {
				cont=0;
				correcto = true;
				if(n==m-1)correcto = false;
				}
			else correcto=false;
			if(cont>=0)++cont;
			if(cont>=63)correcto=false;		
		}
		}
		if(correcto == false)System.out.println("La direccion de correo es invalida");
		if(correcto == true)System.out.println("La direccion de correo es valida");
		}
		}
		}
	}
}
